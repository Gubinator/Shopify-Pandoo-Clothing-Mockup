{{ 'energy-section.css' | asset_url | stylesheet_tag }}

<div class="energy-section">
        <h1 class="energy-section__title">{{ section.settings.heading }}</h1>
        <div class="energy-section__container">
                        {% for block in section.blocks %}
                <div class="container__text">
                    <h2>{{ block.settings.heading1}}</h2>
                    <span>{{ block.settings.text1p1}}</span>
                    <span>{{ block.settings.text1p2}}</span>
                    <span>{{ block.settings.text1p3}}</span>
                </div>
                        {% endfor %}
                <div class="container__image-one">
                    <img src="{{ section.settings.image1 | image_url }}" alt="">
                </div>

                <div class="container__image-two">
                    <img src="{{ section.settings.image2 | image_url }}" alt="">
                </div>
                {% for block in section.blocks %}
                <div class="container__text" id="container__text-two">
                    <h2>{{ block.settings.heading2}}</h2>
                    <span>{{ block.settings.text2p1}}</span>
                    <span>{{ block.settings.text2p2}}</span>
                    <span>{{ block.settings.text2p3}}</span>
                </div>
                {% endfor %}
        </div>
        <div class="energy-section__button"><button><p>{{ section.settings.linktext}}</p></button></div>
    </div>

{% schema %}
  {
    "name": "Energy Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Section Title"
      },
                {
      "type": "text",
      "id": "linktext",
      "label": "Button text",
      "default": "Click Here"
    },
           {
        "type": "image_picker",
        "id": "image1",
        "label": "Image"
      },
           {
        "type": "image_picker",
        "id": "image2",
        "label": "Image"
      }
    ], 
        "blocks": [
            {
        "type": "text1",
        "name": "Text1",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading1",
            "default": "Heading",
            "label": "Title"
          },
                    {
            "type": "textarea",
            "id": "text1p1",
            "default": "Description textarea",
            "label": "Text 1, paragraph 1"
          },
            {
            "type": "textarea",
            "id": "text1p2",
            "default": "Description textarea",
            "label": "Text 1, paragraph 2"
          },
            {
            "type": "textarea",
            "id": "text1p3",
            "default": "Description textarea",
            "label": "Text 1, paragraph 3"
          }
          ]
      },
      {
        "type": "text2",
        "name": "Text2",
        "limit": 1,
        "settings": [
                    {
            "type": "text",
            "id": "heading2",
            "default": "Heading",
            "label": "Title"
          },
                    {
            "type": "textarea",
            "id": "text2p1",
            "default": "Description textarea",
            "label": "Text 2, paragraph 1"
          },
            {
            "type": "textarea",
            "id": "text2p2",
            "default": "Description textarea",
            "label": "Text 2, paragraph 2"
          },
            {
            "type": "textarea",
            "id": "text2p3",
            "default": "Description textarea",
            "label": "Text 2, paragraph 3"
          }
          ]
      }
        ]

    }
{% endschema %}

      