{{ 'banner-section.css' | asset_url | stylesheet_tag }}

<div class="bannerSection">
  <div class="bannerSection__hero">
    <div class="hero__container">
    <h2 class="hero__container-title">{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
    </div>
  </div>
</div>
<div class="bannerSection-mobile">
    <img src="{{section.settings.image | image_url }}" alt="">  
    <div class="bannerSection-mobile__container">
        <div class="container__text">
            <h1 class="hero__container-title">{{ section.settings.title }}</h1>
            <p>{{ section.settings.description }}</p>
        </div>
    </div>
</div>

<style>
  #shopify-section-template--15444451033227__banner-section{
    height:640px;
    width: 100%;
  }
  .bannerSection {
    background-image: url("https:{%- if section.settings.image != blank -%} {{section.settings.image | image_url }} {%- endif-%} ");
    background-repeat: no-repeat;
    background-size: cover;
    height: 40rem;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    object-fit: cover;
    width: 100%;
    margin: 0 auto;
  }

    @media (min-width: 375px) and (max-width: 640px) {
    .bannerSection {
      height: 28.29%; } 
      .bannerSection .bannerSection__hero{
      display: none !important; }}
</style>
{% schema %}
  {
    "name": "Banner Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Section Image Banner"
      }, {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Section Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "description",
        "default": "Section description"
      }
    ]
  }
{% endschema %}